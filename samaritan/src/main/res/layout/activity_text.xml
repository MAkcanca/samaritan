<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/displayText_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:onClick="onClick"
    tools:context="com.thetorine.android.samaritan.TextActivity">
    
    <View
        android:id="@+id/black_line"
        android:layout_width="0dp"
        android:layout_height="@dimen/barThickness"
        android:background="@android:color/black"
        android:layout_centerInParent="true" />
        
    <com.thetorine.android.samaritan.utilities.DynamicTextView
        android:id="@+id/displayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="   "
        android:layout_above="@id/black_line"
        android:textSize="@dimen/textSize" />

    <ImageView
        android:layout_width="@dimen/trig_size"
        android:layout_height="@dimen/trig_size"
        android:maxHeight="@dimen/trig_size"
        android:maxWidth="@dimen/trig_size"
        android:id="@+id/triangle"
        android:layout_below="@+id/black_line"
        android:layout_centerHorizontal="true"
        android:src="@drawable/triangle"
        android:scaleType="fitStart"/>
</RelativeLayout>
